<section id="fh5co-home" data-section="contact" style="background: url(&quot; https://cdn.pixabay.com/photo/2019/06/16/19/10/wheat-4278543_1280.jpg &quot;) 0px 0px / cover; background-attachment: fixed; height: 230px;" data-stellar-background-ratio="0.5">
  <div class="gradient"></div>
    <div class="text-wrap" style="height: 180px">
      <div class="text-inner">
        <div class="row text-center">
          <div class="col-md-8 offset-md-2">
            <h1 class="to-animate">Contact</h1>
          </div>
        </div>
      </div>
    </div>
  <div class="slant"></div>
</section>

<!-- FORM-->
<section id="fh5co-contact" data-section="contact" class='pt-5'>
  <div class="to-animate col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 text-center">
    <h3>Une question ? Un souci ?</h3>
    <%= form_for(@contact) do |f| %>
      <div class="form-group text-left mb-4">
        <%= f.label :email, 'Votre email' %>
        <%= f.text_field :email, class:"form-control", value: @email,autocomplete: @email %>
      </div>

      <div class="form-group text-left mb-4">
        <%= f.label :subject, 'Sujet' %>
        <%= f.select(:subject, options_for_select(@subject_options,
        @contact.subject), { include_blank: "Choisir" }, { :class => "form-control" }) %>
      </div>

      <div class="form-group text-left mb-4">
        <%= f.label :message, "Votre message" %>
        <%= f.text_area :message, class:"form-control" %>
      </div>

      <div class="form-group mt-4 mb-5 submit" id="login-submit">
        <%= submit_tag "Envoyer", class: "btn btn-primary btn-lg mb-5" %>
      </div>
    <% end %>
  </div>
</section>

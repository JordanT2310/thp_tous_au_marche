<div class="form-container">
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h3>Message not sent due to following errors:</h3>
      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<section id="fh5co-contact" data-section="contact" class='pt-5'>
  <div class="to-animate col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 text-center">

    <h1 class='display-4 mb-5'>Contactez-nous</h1>
      <%= form_for(@contact) do |f| %>
        <div class="form-group text-left mb-4">
          <%= f.label :email, 'Votre email' %>
          <%= f.text_field :email, class:"form-control" %>
        </div>

        <div class="form-group text-left mb-4">
          <%= f.label :subject, 'Sujet' %>
          <%= f.select :subject, options_for_select(@subject_options, 
              @contact.subject), include_blank: "Choisissez " %>
        </div>

        <div class="form-group text-left mb-4">
          <%= f.label :message, "Votre message" %>
          <%= f.text_area :message, class:"form-control" %>
        </div>
        
        <div class="form-group mt-4 mb-5 submit" id="login-submit">
          <%= submit_tag "Send", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>

  </div>
</section>
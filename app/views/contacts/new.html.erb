<section id="fh5co-contact" data-section="contact" class='pt-5'>
  <div class="to-animate col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 text-center">

    <h1 class='display-4 mb-5'>Contactez-nous</h1>

    <%= form_for @contact do |f| %>

      <div class="form-group text-left mb-4">
        <%= f.label :name, 'Nom' %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control", style: ""%>
      </div>

      <div class="form-group text-left mb-4">
        <%= f.label :email, 'Email' %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control", style: ""%>
      </div>

      <div class="form-group text-left">
        <%= f.label :message, 'Message' %><br />
        <%= f.text_area :message, class:"form-control" %>
      </div>

      <div class="hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, hint:"leave this field blank" %>
      </div>

      <div class="form-group mt-4 mb-5">
        <%= f.submit "Envoyer le message", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

  </div>
</section>
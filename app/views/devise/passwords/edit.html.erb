<section id="fh5co-home" data-section="connection" style="background-image: url(&quot; https://cdn.pixabay.com/photo/2019/06/16/19/10/wheat-4278543_1280.jpg &quot;); background-position: 0px 0px; height: 200px" data-stellar-background-ratio="0.5">
  <div class="gradient"></div>
  <div class="container">
    <div class="text-wrap" style="height: 180px">
      <div class="text-inner">
        <div class="row text-center">
          <div class="col-md-8 col-md-offset-2">
            <h1 class="to-animate">Changer son mot de passe</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="slant"></div>
</section>

<section id="fh5co-testimonials" data-section="connection" class='pt-5'>
  <div class="col-8 offset-2 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4 to-animate text-center">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
      <div class="form-group text-left mb-4">
        <%= f.label :password, 'Nouveau Mot de passe' %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="password" style='width: 41px'>@</span>
          </div>
          <%= f.password_field :password, autofocus: true, autocomplete: "nouveau mot de passe",placeholder:"j'aime les légumes", class:"form-control" %>
        </div>
      </div>

      <div class="form-group text-left mb-4">
        <%= f.label :password_confirmation, 'Confirmer Mot de passe' %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="password" style='width: 41px'>@</span>
          </div>
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "confirmer mot de passe",placeholder:"j'aime les légumes", class:"form-control" %>
        </div>
      </div>

      <div class="actions mt-4">
        <%= f.submit "Changer mon mot de passe" , class: "btn btn-primary btn-lg"%>
      </div>
    <% end %>

    <div class="mt-3 mb-5">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</section>


<section id="fh5co-connection" data-section="connection" class='pt-5'>
  <div class="col-8 offset-2 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4 to-animate fadeInUp animated text-center">

    <h1 class='display-4 mb-5'>Changer son mot de passe</h1>


    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
      <div class="form-group text-left mb-4">
        <%= f.label :password, 'Nouveau Mot de passe' %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="password" style='width: 41px'>@</span>
          </div>
          <%= f.password_field :password, autofocus: true, autocomplete: "nouveau mot de passe",placeholder:"j'aime les légumes", class:"form-control" %>
        </div>
      </div>

      <div class="form-group text-left mb-4">
        <%= f.label :password_confirmation, 'Confirmer Mot de passe' %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="password" style='width: 41px'>@</span>
          </div>
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "confirmer mot de passe",placeholder:"j'aime les légumes", class:"form-control" %>
        </div>
      </div>

      <div class="actions mt-4">
        <%= f.submit "Changer mon mot de passe" , class: "btn btn-primary btn-lg"%>
      </div>
    <% end %>

    <div class="mt-3 mb-5">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</section>


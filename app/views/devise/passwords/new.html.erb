<section id="fh5co-connection" data-section="connection" class='pt-5'>
  <div class="col-8 offset-2 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4 to-animate fadeInUp animated text-center">

    <h1 class='display-4 mb-5'>RÃ©initialiser son mot de passe</h1>


    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group text-left mb-4">
        <%= f.label :email, 'Email' %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="email" style='width: 41px'>@</span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"abc@gmail.com", class:"form-control" %>
        </div>
      </div>

      <div class="actions mt-4">
        <%= f.submit "Envoyer" , class: "btn btn-primary btn-lg"%>
      </div>
    <% end %>

    <div class="mt-3 mb-5">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</section>

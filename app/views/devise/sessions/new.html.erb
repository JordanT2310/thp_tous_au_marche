<section id="fh5co-connection" data-section="connection" class='p-5 '>
  <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6  to-animate fadeInUp animated text-center mx-auto">

    <h1 class='display-4 mb-5'>Connexion</h1>


  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group text-left mb-4">
      <%= f.label 'Email' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"abc@gmail.com", class:"form-control" %>
    </div>
    <div class="form-group text-left">
      <%= f.label 'Mot de passe' %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Mot de passe", class:"form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions mt-5">
      <%= f.submit "Se connecter" , class: "btn btn-primary btn-lg"%>
    </div>
  <% end %>
    <%= render "devise/shared/links" %>

  </div>
</section>

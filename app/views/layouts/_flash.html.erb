<% flash.each do |type, msg| %>
  <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade show d-flex justify-content-between mb-0" role="alert">
    <% if msg.is_a?(Hash) %>
      <ul class="mb-0">
        <% msg.values.each do |error| %>
          <% next if error.last == nil %>
          <li><%= error.last %></li>
        <% end %>
      </ul>
    <% else %>
      <%= msg %>
    <% end %>
    <button type="button" class="close ml-3" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  </div>
<% end %>

<div class="gradient"></div>

<section id="edit-categories" class='pt-5'>
  <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 text-center">

    <h1 class='display-4 mb-5'>Mes produits</h1>

    <%= form_tag url_for(:action => 'create') do %>

      <div class="form-group custom-control custom-checkbox text-left mb-4">
        <%= check_box_tag 'meat', 1, class: 'custom-control-input' %>
        <%= label_tag 'meat', 'Viande', class: 'custom-control-label pl-1' %>
      </div>

      <div class="form-group mt-4 mb-5">
        <%= submit_tag "Modifier mes produits", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

  </div>
</section>


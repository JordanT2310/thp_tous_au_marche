<div class="col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 to-animate fadeInUp animated text-center">

  <h1 class='display-4'>Contactez-nous</h1>

  <%= form_for @user, url: {action: "contact"} do |f| %>

    <div class="form-group">
      <%= f.label 'Objet' %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control", style: ""%>
    </div>

    <div class="form-group">
      <%= f.label 'Contenu' %><br />
      <%= f.text_area :email, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Envoyer le message" , class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

</div>

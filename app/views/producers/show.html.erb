<section id="fh5co-home" data-section="home" style="background-image: url(&quot; https://cdn.pixabay.com/photo/2019/06/16/19/10/wheat-4278543_1280.jpg &quot;); background-position: 0px 0px; height: 200px" data-stellar-background-ratio="0.5" class="animated">
  <div class="gradient"></div>
  <div class="container">
    <div class="text-wrap" style="height: 180px">
      <div class="text-inner">
        <div class="row text-center">
          <div class="col-md-8 col-md-offset-2">
            <h1 class="to-animate fadeInUp animated"><%= @producer.first_name %> <%= @producer.last_name %></h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="slant"></div>
</section>

<section id="fh5co-work" data-section="work" class="animated">
  <div class="container">
    <div class="row">
      <div class="col-md-12 section-heading text-center" style="padding: 0">
        <h2 class="to-animate fadeInUp animated">Informations</h2>
      </div>
    </div>

    <div class="row row-bottom-padded-sm">
      <div class="col-md-6 text-center to-animate fadeInUp animated">
        <%if @producer.avatar.attached?%>
          <%= image_tag @producer.avatar, alt: 'avatar', style:'height: 350px' %>
        <%else%>
          <p>=== Il n'y a pas encore d'avatar lié à ce producteur ===</p>
        <%end%>
        <%if producer_signed_in?%>
          <div id='buttons-avatar'>
            <%= form_tag producer_avatars_path(@producer), multipart: true do %>
              <%= file_field_tag :avatar %>
              <%= submit_tag "mettre à jour", class:'btn btn-primary btn-lg' %>
            <% end %>
          </div>
        <%end%>
      </div>

      <div class="col-md-6 text-center to-animate fadeInUp animated">
        <div class="fh5co-contact-info box-producer">
          <ul>
            <li><i class="fas fa-home"></i> <%= @producer.address%>
              <br>
              <!-- if city = nil, there is an error because city_name and zip_code aren't defined -->
              <%if @producer.city.nil?%>
                <i>Pas d'adresse enregistrée pour le moment</i>
              <%else%>
                <%= @producer.city.zip_code%> <%= @producer.city.city_name.upcase %>
              <%end%>
            </li>
            <li><i class="fas fa-globe"></i> <%= link_to @producer.website, @producer.website %></li>
          </ul>
        </div>

        <div class="fh5co-contact-info box-producer">
          <ul>
            <li><i class="fas fa-phone-alt"></i> <%= @producer.phone_number %></li>
            <li><i class="fas fa-at"></i> <%= @producer.email%></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="row description-box">
      <blockquote class="to-animate-2 fadeInDown animated">
        <p><%= @producer.description%></p>
      </blockquote>
    </div>
  </div>
  <div class="slant"></div>
</section>

<section id="fh5co-about-bis" data-section="about" class="animated">
  <%if producer_signed_in?%>
    <div class="row box-edit">
      <%= link_to "Modifier mes identifiants", edit_producer_registration_path, { :type => "button",  :class => "btn btn-primary btn-lg" } %>
      <%= link_to "Modifier mes informations", edit_producer_path(current_producer), class: "btn btn-primary btn-lg" %>
    </div>
  <%end%>

</section>
<section id="fh5co-connection" data-section="connection" class='pt-5'>
  <div class="col-8 offset-2 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4 to-animate fadeInUp animated text-center">

    <h1 class='display-4 mb-5'>Édition du profil</h1>

    <%= form_with(model: user, local: true, method: :put) do |update| %>

  <div class="form-group">
    <%= update.text_field :first_name, class:"form-control", placeholder:"Prénom" %>
  </div>

  <div class="form-group">
    <%= update.text_field :last_name, class:"form-control", placeholder:"Nom" %>
  </div>

  <div class="form-group">
    <%= update.text_field :phone_number, class:"form-control", placeholder:"N° de téléphone" %>
  </div>

  <div class="actions text-center">
    <button type="submit" class="btn btn-primary">Envoyer</button>
  </div>
<% end %>

    <div class="row justify-content-center mt-4 mb-5">
      <%= link_to "Retour", :back, class: 'mx-3' %>
      <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Êtes-vous sûr(e)?" }, method: :delete , class: "btn btn-sm btn-danger mx-3" %>
    </div>

  </div>
</section>